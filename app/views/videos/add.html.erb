<div class="videos add main">
	<div class="container">
		<h1>Add Video</h1>
		<p>
			<%= link_to controller: 'videos', action: 'index' do %>
				<span class="glyphicon glyphicon-backward"></span>
				All Videos
			<% end %>
		</p>

		<%= form_for :video, url: { controller: 'videos', action: 'create' } do |f| %>

		<div class="form-group">
			<%= f.label :original_url, "Video URL" %>
			<%= f.text_field :original_url, placeholder: 'Paste URL here...', class: 'form-control' %>
		</div>

		<div class="form-group">
			<%= f.label :topic_id, "Topic" %>
			<%= collection_select :video, :topic_id, Topic.order("topics.name ASC"), :id, :name, { prompt: "- Select a topic -" }, { class: 'form-control' } %>
		</div>

		<div class="form-group">
			<%= f.label :language_id, "Language" %>
			<%= collection_select :video, :language_id, Language.order("languages.name ASC"), :id, :name, { prompt: "- Select a language -" }, { class: 'form-control' } %>
		</div>

		<div class="form-group">
			<%= f.label :speaker_id, "Speaker" %>
			<%= collection_select :video, :speaker_id, Speaker.order("speakers.first_name ASC"), :id, :first_name, { prompt: "- Select a speaker -" }, { class: 'form-control' } %>
		</div>

		<div class="form-group">
			<%= f.submit "Submit", :disable_with => 'Submiting...', class: 'btn btn-primary' %>
		</div>
		
		<% end %>
		  
	</div>
</div>
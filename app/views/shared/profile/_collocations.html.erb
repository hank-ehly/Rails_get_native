<div class="info_column col-md-6 col-sm-7">
	<h2>Collocations</h2>
	<hr>


<% @playlist_videos.each do |playlist_video| %>
	<% @collocations.where(video_id: playlist_video.video_id).each do |collocation| %>
		<ul class="collocation_instance" id="collocation<%= collocation.id %>">
			<li class="collocation_first"><%= collocation.collocation %></li>
			<li class="well well-sm collocation_well"><%= collocation.context %></li>
			<li class="collocation_video_info">

				<%= link_to language_videos_path(Language.find(Video.find(playlist_video.video_id).language_id).id) do %><%= Language.find(Video.find(playlist_video.video_id).language_id).name %><% end %> |

				<%= link_to language_video_path(Language.find(Video.find(playlist_video.video_id).language_id).id, Video.find(playlist_video.video_id).id) do %>Video<% end %> |

				<%= link_to language_topic_path(Language.find(Video.find(playlist_video.video_id).language_id).id, Topic.find(Video.find(playlist_video.video_id).topic_id).id) do %><%= Topic.find(Video.find(playlist_video.video_id).topic_id).name %><% end %> |

				<%= link_to language_speaker_path(Language.find(Video.find(playlist_video.video_id).language_id).id, Speaker.find(Video.find(playlist_video.video_id).speaker_id).id) do %><%= full_name_of(Speaker.find(Video.find(playlist_video.video_id).speaker_id)) %><% end %> |

				<%= link_to "remove", collocation_path(collocation.id), remote: true, method: 'delete', onclick: "return confirm(\"Are you sure?\")" %>

			</li>
		</ul>
	<% end %>
<% end %>




</div> <!-- info_column col-sm-7 -->
<div class="actions_column col-sm-5 col-md-3">
	<div class="actions_box">
		<h2>Actions</h2>
		<ul>
			<li>
				<% if @layout_style == 'Admin' %>
					<%= link_to edit_admin_path(@current_user_admin.id) do %>
						<span class="glyphicon glyphicon-edit"></span>
						Edit Profile
					<% end %>
				<% else %>
					<%= link_to edit_user_path(@current_user_admin.id) do %>
						<span class="glyphicon glyphicon-edit"></span>
						Edit Profile
					<% end %>
				<% end %>
			</li>
			<% unless @layout_style == 'Admin' %>
			<li>
				<%= link_to study_pages_path do %>
					<span class="glyphicon glyphicon-apple"></span>
					Study Now
				<% end %>
			</li>
			<% else %>
			<li>
				<%= link_to new_video_path do %>
					<span class="glyphicon glyphicon-plus"></span>
					Add Video
				<% end %>
			</li>
			<% end %>
		</ul>
	</div>
</div>
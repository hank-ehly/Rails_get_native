<div class="shared profile admins col-sm-12">
	<h2><strong>Admins</strong>&nbsp;<small><%= link_to "+ New", new_admin_path %></small></h2>
	<table class="table table-hover">
		<thead>
			<th>Name <span class="caret"></th>
			<th>Id</th>
			<th>Email</th>
		</thead>
	<% @admins.each do |admin| %>
		<tr>
			<td><%= full_name_of(admin) %></td>
			<td><%= admin.id %></td>
			<td><%= admin.email %></td>
		</tr>
	<% end %>
	</table>
</div>
<div class="shared profile_topics main col-md-6 col-sm-7">
	<h2>Languages</h2>
	<%= link_to "+ Add Language", controller: 'languages', action: 'add' %>
	<div id="searcharea">
    <input type="search" name="search" id="search" class="form-control" placeholder="Search languages by name...">
  </div>
  <div id="update"></div>
	<table class="table table-hover">
		<tr>
		<!-- depending on how languages are sorted, add 'caret' class to spans // default is 'name' -->
			<th class="topic_sorter">Name <span class="caret"></span></th>
			<th class="topic_sorter"># of Videos <span class=""></span></th>
			<th class="topic_sorter"># of Speakers <span class=""></span></th>
			<th>Actions</th>
		</tr>
		<% if @languages %>
		<% @languages.each do |language| %>
		<tr>
			<td><%= language.name %></td>
			<td>(<%= rand(1..99) %>)</td>
			<td><%= language.speakers.size %></td>
			<td>
				<%= link_to "View", controller: 'languages', action: 'show', id: language.id %>
				<%= link_to "Edit", controller: 'languages', action: 'edit', id: language.id %>
				<%= link_to "Delete", controller: 'languages', action: 'delete', id: language.id %>
			</td>
		</tr>
		<% end %>
		<% end %>
	</table>
</div>
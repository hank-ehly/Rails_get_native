<div class="info_column col-md-6 col-sm-7">
	<h2>Playlist</h2>
	


	<table class="table table-hover">
		<tr>
			<th>Video</th>
			<th>Topic</th>
			<th>Speaker</th>
		</tr>
		<% if @playlist %>
		<% @playlist.videos.each do |video| %>
			<tr>
				<td><%= link_to controller: 'videos', action: 'show', id: video.id %></td>
				<td><%= link_to controller: 'topics', action: 'show', id: video.topic.id %></td>
				<td><%= link_to controller: 'speakers', action: 'show', id: video.speaker.id %></td>
			</tr>
		<% end %>
		<% else %>
			<tr>
				<td>no</td>
				<td>data</td>
				<td>yet.</td>
			</tr>
		<% end %>
	</table>





</div> <!-- info_column col-sm-7 -->
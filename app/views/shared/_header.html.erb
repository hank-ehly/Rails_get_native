<header>
	<nav class="navbar navbar-default">
	  <div class="container">
	    <!-- Brand and toggle get grouped for better mobile display -->
	    <div class="navbar-header">
	      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
	        <span class="sr-only">Toggle navigation</span>
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	      </button>
	      <%= link_to "Get_Native", { controller: 'users', action: 'profile'}, class: "navbar-brand" %>
	    </div>

	    <!-- Collect the nav links, forms, and other content for toggling -->
	    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
	      <ul class="nav navbar-nav">
	      	<% if @current_user_admin %>
	        	<li><%= link_to "Videos", topics_path %></li>
	        <% elsif @layout_style == 'Admin' %>
	        	<li><%= link_to "Add Video +", new_video_path %></li>
	        <% else %>
	        	<li class=""><a href="#">Try Demo</a></li>
	        <% end %>
	      </ul>
	      <form class="navbar-form navbar-left" role="search">
	        <div class="form-group">
	          <div class="input-group">
	          	<input type="text" class="form-control" placeholder="Search for...">
				      <span class="input-group-btn">
				        <button class="btn btn-default" type="button"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></button>
				      </span>
	          </div>
	        </div>
	      </form>
	      <ul class="nav navbar-nav navbar-right">
	      	<% if @current_user_admin %>
		        <li>
			        <%= link_to :controller => 'users', :action => 'profile' do %>
							<span class="glyphicon glyphicon-user"></span> <%= @current_user_admin.email %></a>
							<% end %>
						</li>
		        <li>
		        	<%= link_to "Logout", :controller => "access", :action => "logout" %>
		        </li>
	        <% else %>
		        <li>


							<!-- Button trigger modal -->
							<a class="login_anchor" data-toggle="modal" data-target="#myModal">Login</a>

							<!-- Modal -->
							<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
							  <div class="modal-dialog">
							    <div class="modal-content">
							      <div class="modal-header">
							        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
							        <h1 class="modal-title" id="myModalLabel">Login</h1>
							      </div>
							      <div class="modal-body">
											
												<%= form_tag(:controller => "access", :action => "attempt_login", :html => {class: "form"}) do %>
												
													<div class="form-group">
														<%= label_tag (:email) %>
														<div class="controls">
															<%= text_field_tag :email, "", placeholder: "Email", tabindex: 1, class: "form-control" %>
														</div>
													</div>
												
													<div class="form-group">
														<%= label_tag (:password) %>
														<div class="controls">
															<%= password_field_tag(:password, "", placeholder: "Password", tabindex: 2, class: 'form-control') %>
														</div>
													</div>

													<div class="checkbox">
														<%= check_box_tag :remember_me %>
														<%= label_tag :remember_me %>
												  </div>
												
													<div class="form-group">
														<%= submit_tag "Login", tabindex: 3, class: "btn btn-primary" %>
													</div>

													<p>Don't have an account? <%= link_to "Sign Up", new_user_path %></p>
													
												<% end %> <!-- login form -->
											
							      </div> <!-- modal-body -->
							      <div class="modal-footer">
							        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
							        <!-- <button type="button" class="btn btn-primary">Save changes</button> -->
							      </div>
							    </div>
							  </div>
							</div> <!-- modal -->






		        </li>
		        <li><%= link_to "Sign Up", new_user_path %></li>
	        <% end %>
	      </ul> <!-- navbar-right -->
	    </div><!-- .navbar-collapse -->
	  </div><!-- .container-fluid -->
	</nav>
</header>
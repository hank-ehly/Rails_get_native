<div class="info_column col-md-6 col-sm-7">
	<h2>Account</h2>
	<hr>

		<table class="table table-hover table-bordered">
			<tr>
				<th>First Name</th>
				<td><%= @user.first_name %></td>
			</tr>
			<tr>
				<th>Last Name</th>
				<td><%= @user.last_name %></td>
			</tr>
			<tr>
				<th>Username</th>
				<td><%= @user.username %></td>
			</tr>
			<tr>
				<th>Email</th>
				<td><%= @user.email %></td>
			</tr>
			<tr>
				<th>Password</th>
				<td><i>it's a secret!</i></td>
			</tr>
		</table>

		<%= link_to :controller => 'users', :action => 'edit', :id => @user.id do %>
			<button class="btn btn-primary">Edit <span class="glyphicon glyphicon-edit"></span></button>
		<% end %>

	<hr>
	<div class="delete_account">
		<p>Unhappy?</p>
		<%= link_to "Delete account", :controller => "users", :action => "delete" %>
	</div>
</div> <!-- info_column col-sm-7 -->
<div class="actions_column col-sm-5 col-md-3">
	<div class="actions_box">
		<h2>Actions</h2>
		<ul>
			<li>
				<% if @current_user %>
					<% user_admin = @current_user %>
				<% elsif @current_admin %>
					<% user_admin = @current_admin %>
				<% end %>
				<%= link_to :controller => 'users', :action => 'edit', :id => user_admin.id do %>
				<span class="glyphicon glyphicon-edit"></span>
				Edit Profile
				<% end %>
			</li>
			<li>
				<%= link_to :controller => "videos", :action => 'study_index' do %>
				<span class="glyphicon glyphicon-apple"></span>
				Study Now
				<% end %>
			</li>
		</ul>
	</div>
</div>
<div class="languages add main">
	<div class="container">

		<h1>Add Language</h1>

		<p>
			<%= link_to controller: 'languages', action: 'index' do %>
				<span class="glyphicon glyphicon-backward"></span>
				All Languages
			<% end %>
		</p>

		<%= form_for :language, url: { controller: 'languages', action: 'create' } do |f| %>

			<div class="form-group">
				<%= f.label :name %>
				<%= f.text_field :name, placeholder: 'Language name...', class: 'form-control' %>
			</div>

			<div class="form-group">
				<%= f.submit "Create", :disable_with => 'Creating...', class: 'btn btn-primary' %>
			</div>

		<% end %>  

	</div>
</div>
<div class="languages edit main">
	<div class="container">

		<h1>Edit Language: <%= @language.name %></h1>

		<p>
			<%= link_to controller: 'languages', action: 'index' do %>
				<span class="glyphicon glyphicon-backward"></span>
				All Languages
			<% end %>
		</p>

		<table class="table">
			<tr>
				<th>Name</th>
				<th>Id</th>
				<th># of Videos</th>
				<th># of Speakers</th>
				<th># of Topics</th>
				<% if @layout_style == 'Admin' %>
				<th>Created At</th>
				<th>Updated At</th>
				<th>Actions</th>
				<% end %>
			</tr>
			<tr>
				<td><%= @language.name %></td>
				<td><%= @language.id %></td>
				<td><%= "@language.videos.count" %></td>
				<td><%= @language.speakers.count %></td>
				<td><%= "@language.topics.count" %></td>
				<td><%= @language.created_at %></td>
				<td><%= @language.updated_at %></td>
				<td>
					<%= link_to "View", controller: 'languages', action: 'show', id: @language.id %>
					<%= link_to "Delete", controller: 'languages', action: 'delete', id: @language.id %>
				</td>
			</tr>
		</table>

		<%= form_for :language, url: { controller: 'languages', action: 'update', id: @language.id } do |f| %>

			<div class="form-group">
				<%= f.label :name %>
				<%= f.text_field :name, placeholder: 'Topic name...', class: 'form-control' %>
			</div>

			<div class="form-group">
				<%= f.submit "Update", :disable_with => 'Updating...', class: 'btn btn-primary' %>
			</div>

		<% end %>  

	</div>
</div>
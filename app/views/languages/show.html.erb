<div class="languages show main">
	<div class="container">
		<h1>Show Language: <%= @language.name %></h1>
		<table class="table">
			<tr>
				<th>Name</th>
				<th>Id</th>
				<th># of Videos</th>
				<th># of Speakers</th>
				<th># of Topics</th>
				<% if @layout_style == 'Admin' %>
				<th>Created At</th>
				<th>Updated At</th>
				<% end %>
			</tr>
			<tr>
				<td><%= @language.name %></td>
				<td><%= @language.id %></td>
				<td><%= "@language.videos.count" %></td>
				<td><%= @language.speakers.count %></td>
				<td><%= "@language.topics.count" %></td>
				<td><%= @language.created_at %></td>
				<td><%= @language.updated_at %></td>
			</tr>
		</table>
	</div>
</div>
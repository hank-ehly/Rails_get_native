<div class="topics edit main">
	<div class="container">
		<h1>Edit Topic</h1>
		<%= link_to "Cancel", controller: 'users', action: 'profile', view: 'topics' %>
		<table class="table">
			<tr>
				<th>ID</th>
				<th>Name</th>
				<th># of Videos</th>
				<th># of Speakers</th>
				<th>Created at</th>
				<th>Updated at</th>
			</tr>
			<% if @topic %>
			<tr>
				<td><%= @topic.id %></td>
				<td><%= @topic.name %></td>
				<td><%= rand(99) %></td>
				<td><%= rand(99) %></td>
				<td><%= @topic.created_at %></td>
				<td><%= @topic.updated_at %></td>
			</tr>
			<% end %>
			</table>
		<%= form_for :topic, url: { controller: 'topics', action: 'update', id: @topic.id } do |f| %>
			<div class="form-group">
				<%= f.label :name %>
				<%= f.text_field :name, placeholder: 'Topic name...', class: 'form-control' %>
			</div>

			<div class="form-group">
				<%= f.submit "Submit", :disable_with => 'Submiting...', class: 'btn btn-primary' %>
			</div>
		<% end %>  
	</div>
</div>

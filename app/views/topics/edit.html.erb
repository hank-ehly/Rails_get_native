<div class="topics edit main">
	<div class="container">
		<h1><%= @topic.name if @topic %></h1>
		<p>
		<%= link_to controller: 'topics', action: 'index' do %>
		<span class="glyphicon glyphicon-backward"></span>
		All Topics
		<% end %>
		</p>
		<table class="table">
			<tr>
				<th>Name</th>
				<th># of Videos</th>
				<% if @layout_style == 'Admin' %>
				<th>ID</th>
				<th>Created at</th>
				<th>Updated at</th>
				<th>Actions</th>
				<% end %>
			</tr>
			<% if @topic %>
			<tr>
				<td><%= @topic.name %></td>
				<td><%= @topic.videos.count %></td>
				<% if @layout_style == 'Admin' %>
				<td><%= @topic.id %></td>
				<td><%= @topic.created_at %></td>
				<td><%= @topic.updated_at %></td>
				<td>
					<%= link_to "View", controller: 'topics', action: 'show', id: @topic.id %>
					<%= link_to "Delete", controller: 'topics', action: 'delete', id: @topic.id %>
				</td>
				<% end %>
			</tr>
			<% end %>
			</table>
		<%= form_for :topic, url: { controller: 'topics', action: 'update', id: @topic.id } do |f| %>
			<div class="form-group">
				<%= f.label :name %>
				<%= f.text_field :name, placeholder: 'Topic name...', class: 'form-control' %>
			</div>

			<div class="form-group">
				<%= f.submit "Update", :disable_with => 'Updating...', class: 'btn btn-primary' %>
			</div>
		<% end %>  
	</div>
</div>

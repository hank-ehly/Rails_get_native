<div class="topics show main">
	<div class="container">
		<h1>Show Topic</h1>
		<%= link_to "Cancel", controller: 'users', action: 'profile', view: 'topics' %>
		<table class="table">
			<tr>
				<th>ID</th>
				<th>Name</th>
				<th># of Videos</th>
				<th># of Speakers</th>
				<th>Created at</th>
				<th>Updated at</th>
			</tr>
			<% if @topic %>
			<tr>
				<td><%= @topic.id %></td>
				<td><%= @topic.name %></td>
				<td><%= rand(99) %></td>
				<td><%= rand(99) %></td>
				<td><%= @topic.created_at %></td>
				<td><%= @topic.updated_at %></td>
			</tr>
			<% end %>
		</table>
	</div>
</div>

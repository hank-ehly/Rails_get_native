<div class="topics delete main">
	<div class="container">
		<h1>- Delete Topic</h1>
		<%= link_to "Cancel", controller: 'users', action: 'profile', view: 'topics' %>
		<table class="table">
			<tr>
				<th>ID</th>
				<th>Name</th>
				<th># of Videos</th>
				<th># of Speakers</th>
				<th>Created at</th>
				<th>Updated at</th>
			</tr>
			<% if @topic %>
			<tr>
				<td><%= @topic.id %></td>
				<td><%= @topic.name %></td>
				<td><%= rand(99) %></td>
				<td><%= rand(99) %></td>
				<td><%= @topic.created_at %></td>
				<td><%= @topic.updated_at %></td>
			</tr>
			<% end %>
			</table>
		<%= form_for :topic, url: { controller: 'topics', action: 'destroy', id: @topic.id } do |f| %>
			<div class="form-group">
				<%= f.submit "Delete", :disable_with => 'Deleteing...', data: {confirm: "Are you sure you want to delete the topic '#{@topic.name}'?"}, class: 'btn btn-danger' %>
			</div>
		<% end %>  
	</div>
</div>

<div class="speakers show main">
	<div class="container">
		<h1>Show Speaker: <%= full_name_of(@speaker) %></h1>
		<p>
			<%= link_to controller: 'speakers', action: 'index' do %>
				<span class="glyphicon glyphicon-backward"></span>
				All Speakers
			<% end %>
		</p>
		<table class="table">
			<tr>
				<th>ID</th>
				<th>Name</th>
				<th>Native Language</th>
				<th># of Videos</th>
				<th># of Topics</th>
				<th>Gender</th>
				<th>Age</th>
				<th>Created at</th>
				<th>Updated at</th>
				<th>Actions</th>
			</tr>
			<% if @speaker %>
			<tr>
				<td><%= @speaker.id %></td>
				<td><%= @speaker.first_name + " " + @speaker.last_name %></td>
				<td>
					<% Language.all.each do |language| %>
						<% if @speaker.language_id == language.id %>
							<%= language.name %>						
						<% end %>
					<% end %>
				</td>
				<td><%= "@speaker.videos.count" %></td>
				<td><%= @speaker.topics.count %></td>
				<td><%= @speaker.gender ? 'Male' : 'Female' %></td>
				<td><%= age_of(@speaker) %></td>
				<td><%= @speaker.created_at %></td>
				<td><%= @speaker.updated_at %></td>
				<td>
					<%= link_to "Edit", controller: 'speakers', action: 'edit', id: @speaker.id %>
					<%= link_to "Delete", controller: 'speakers', action: 'delete', id: @speaker.id %>
				</td>
			</tr>
			<% end %>
		</table>
		<hr>
		<h3>About <%= @speaker.first_name + " " + @speaker.last_name %></h3>
		<div class="about_speaker row">
			<%= image_tag "http://placehold.it/60x60", class: 'col-sm-2' %>
			<p class="col-sm-10" style="float:right;"><%= @speaker.about %></p>
		</div>
		<h2>Videos for <%= @speaker.first_name + " " + @speaker.last_name if @speaker %></h2>
		<%= link_to "+ Add a video for this speaker", controller: 'videos', action: 'add', speaker_id: @speaker.id %>
		<table class="table">
			<tr>
				<th>Title</th>
				<th>Speaker</th>
				<th>Duration</th>
			</tr>
			<!-- loop through videos table -->
		</table>
	</div>
</div>

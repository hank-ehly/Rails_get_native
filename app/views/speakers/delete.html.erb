<div class="speakers delete main">
	<div class="container">
		<h1>Delete Speaker: <%= full_name_of(@speaker) %></h1>
		<%= link_to "Cancel", controller: 'users', action: 'profile', view: 'speakers' %>
		<table class="table">
			<tr>
				<th>ID</th>
				<th>Name</th>
				<th>Native Language</th>
				<th># of Videos</th>
				<th># of Topics</th>
				<th>Gender</th>
				<th>Age</th>
				<th>Created at</th>
				<th>Updated at</th>
				<th>Actions</th>
			</tr>
			<% if @speaker %>
			<tr>
				<td><%= @speaker.id %></td>
				<td><%= @speaker.first_name + " " + @speaker.last_name %></td>
				<td>
					<% Language.all.each do |language| %>
						<% if @speaker.language_id == language.id %>
							<%= language.name %>						
						<% end %>
					<% end %>
				</td>
				<td><%= rand(1..10) %></td>
				<td><%= @speaker.topics.size %></td>
				<td><%= @speaker.gender ? 'Male' : 'Female' %></td>
				<td><%= age_of(@speaker) %></td>
				<td><%= @speaker.created_at %></td>
				<td><%= @speaker.updated_at %></td>
				<td>
					<%= link_to "View", controller: 'speakers', action: 'show', id: @speaker.id %>
					<%= link_to "Edit", controller: 'speakers', action: 'edit', id: @speaker.id %>
				</td>
			</tr>
			<% end %>
		</table>
		<%= form_for :speaker, url: { controller: 'speakers', action: 'destroy', id: @speaker.id } do |f| %>

			<div class="form-group">
				<%= f.submit "Delete", :disable_with => 'Deleting...', data: { confirm: "Are you sure?" }, class: 'btn btn-primary' %>
			</div>
			
		<% end %>
		  
	</div>
</div>

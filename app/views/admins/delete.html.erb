<div class="admins delete main">
<div class="container">

	<div class="row">

		<div class="col-sm-12">

			<h1>Delete Account</h1>
			
			<%= form_for :admin, url: { controller: "admins", action: "destroy", id: @admin.id } do |f| %>

				<%= error_messages_for @admin %>

				<div class="form-group">
					<%= f.label :password, "Confirm Password" %>
					<%= f.password_field :password, class: "form-control", placeholder: "Confirm Password" %>
				</div>

				<div class="form-group">
					<%= f.submit "Delete Account", class: "btn btn-danger", :disable_with => 'Deleting...', data: { confirm: "Are you sure you want to completely delete #{@admin.email}'s account?" } %>
				</div>
			  
				<p>Change your mind? <%= link_to "Return to profile", controller: "users", action: "profile" %></p>
				
			<% end %>

			</div> <!-- col-sm-6 -->

		</div> <!-- row -->

</div>	  
</div> <!-- admins delete main -->
